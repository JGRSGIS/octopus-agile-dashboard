# ============================================
# Octopus Agile Dashboard Configuration
# ============================================
# Copy this file to .env and fill in your values

# --------------------------------------------
# Octopus Energy API Configuration
# --------------------------------------------

# Your Octopus Energy API key
# Find at: https://octopus.energy/dashboard/developer/
OCTOPUS_API_KEY=sk_live_your_api_key_here

# Your electricity Meter Point Administration Number (13 digits)
# Find on your bill or in your Octopus account
MPAN=2000000000000

# Your electricity meter serial number
# Find alongside your MPAN
SERIAL_NUMBER=00A0000000

# --------------------------------------------
# Region Configuration
# --------------------------------------------

# Your DNO region code (single letter A-P)
# A=Eastern, B=East Midlands, C=London, D=Merseyside/N.Wales
# E=Midlands, F=North Eastern, G=North Western, H=Southern
# J=South Eastern, K=South Wales, L=South Western, M=Yorkshire
# N=Southern Scotland, P=Northern Scotland
REGION=H

# --------------------------------------------
# Database Configuration
# --------------------------------------------

# PostgreSQL connection string
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://octopus:your_password@localhost:5432/octopus_agile

# --------------------------------------------
# Optional: Redis Cache
# --------------------------------------------

# Redis connection URL (optional, for distributed caching)
# REDIS_URL=redis://localhost:6379/0

# --------------------------------------------
# Cache Settings
# --------------------------------------------

# Enable/disable caching
CACHE_ENABLED=true

# Cache time-to-live in seconds (default: 1 hour)
CACHE_TTL_SECONDS=3600

# Price fetch interval in minutes (default: 30)
PRICE_FETCH_INTERVAL_MINUTES=30

# --------------------------------------------
# Server Configuration
# --------------------------------------------

# API server host and port
API_HOST=0.0.0.0
API_PORT=8000

# Enable debug mode (set to false in production)
DEBUG=false

# --------------------------------------------
# Frontend Configuration
# --------------------------------------------

# API URL for the frontend (Vite will use this)
VITE_API_URL=http://localhost:8000
