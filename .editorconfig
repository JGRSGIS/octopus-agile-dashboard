# Octopus Agile Dashboard - EditorConfig
# https://editorconfig.org/
#
# This file helps maintain consistent coding styles across different editors
# Install the EditorConfig plugin for your editor if needed

# Top-most EditorConfig file
root = true

# =============================================================================
# Default settings for all files
# =============================================================================
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# =============================================================================
# Python files (Backend)
# =============================================================================
[*.py]
indent_size = 4
max_line_length = 88

# =============================================================================
# JavaScript/TypeScript files (Frontend)
# =============================================================================
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# =============================================================================
# Web files
# =============================================================================
[*.{html,css,scss,sass,less}]
indent_size = 2

# =============================================================================
# Configuration files
# =============================================================================
[*.{json,yml,yaml,toml}]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

# =============================================================================
# Shell scripts
# =============================================================================
[*.sh]
indent_size = 2

# =============================================================================
# Docker files
# =============================================================================
[Dockerfile*]
indent_size = 4

[docker-compose*.yml]
indent_size = 2

# =============================================================================
# Makefiles (require tabs)
# =============================================================================
[Makefile]
indent_style = tab
indent_size = 4

# =============================================================================
# Git files
# =============================================================================
[.gitattributes]
indent_size = 2

[.gitignore]
indent_size = 2
